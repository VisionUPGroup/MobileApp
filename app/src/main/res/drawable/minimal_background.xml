<!-- File: res/drawable/rounded_top_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base White Background -->
    <item>
        <color android:color="@android:color/white" />
    </item>

    <!-- Top Half-Circle Gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#6fc0c6"
                android:endColor="@android:color/white"
                android:angle="90" />
        </shape>
    </item>

    <!-- Overlay to create the half-circle effect -->
    <item>
        <shape android:shape="oval">
            <size android:width="1000dp" android:height="500dp" />
            <gradient
                android:startColor="#6fc0c6"
                android:endColor="@android:color/white"
                android:angle="90" />
        </shape>
    </item>

</layer-list>
