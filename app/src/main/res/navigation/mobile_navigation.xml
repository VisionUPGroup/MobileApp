<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_message"
        android:name="com.example.glass_project.product.ui.profile.ProfileFragment"
        android:label="@string/title_message"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.glass_project.product.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_shopping_cart"
        android:name="com.example.glass_project.product.ui.shoppingCart.ShoppingCartFragment"
        android:label="@string/title_shopping_cart"
        tools:layout="@layout/fragment_shopping_cart"/>

    <fragment
        android:id="@+id/navigation_map"
        android:name="com.example.glass_project.product.ui.map.MapFragment"
        android:label="@string/title_map"
        tools:layout="@layout/fragment_map"/>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.glass_project.product.ui.profile.ProfileActivity"
        android:label="@string/title_profile"
        tools:layout="@layout/activity_profile" />

</navigation>