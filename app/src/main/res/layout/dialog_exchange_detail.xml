<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chi tiết Đổi trả"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="16dp" />

        <!-- Staff Information -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:padding="6dp">

                <TextView
                    android:id="@+id/staffTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Thông tin nhân viên"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/staffName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên nhân viên:" />

                <TextView
                    android:id="@+id/staffEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mail:" />

                <TextView
                    android:id="@+id/staffPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại:" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Detailed Information -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="6dp">

                <TextView
                    android:id="@+id/detailTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông tin chi tiết"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lý do:" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trạng thái:" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/reportId"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mã đơn báo cáo:"
                        android:textStyle="bold"
                        android:layout_marginEnd="16dp" />

                    <Button
                        android:id="@+id/btnViewReport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:backgroundTint="@color/blue"
                        android:text="Xem báo cáo" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Old Order Information -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="6dp">

                <TextView
                    android:id="@+id/oldOrderTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đơn hàng cũ"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/red"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/oldOrderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Mã đơn hàng:" />

                <TextView
                    android:id="@+id/oldEyeGlass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên gọng kính:" />

                <TextView
                    android:id="@+id/oldLeftLens"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên tròng trái:" />

                <TextView
                    android:id="@+id/oldRightLens"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên tròng phải:" />

                <Button
                    android:id="@+id/btnOldOrderDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:backgroundTint="@color/blue1"

                    android:text="Xem chi tiết" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- New Order Information -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="1dp"
                android:padding="6dp">

                <TextView
                    android:id="@+id/newOrderTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đơn hàng mới"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/red"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/newOrderId"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã đơn hàng:" />

                <TextView
                    android:id="@+id/newEyeGlass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên gọng kính:" />

                <TextView
                    android:id="@+id/newLeftLens"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên tròng trái:" />

                <TextView
                    android:id="@+id/newRightLens"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên tròng phải:" />

                <Button
                    android:id="@+id/btnNewOrderDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem chi tiết"
                    android:backgroundTint="@color/blue"
                    android:layout_gravity="end"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
