<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Toolbar trong AppBarLayout -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:elevation="4dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:title="Đơn Hàng"
            app:titleTextColor="@android:color/black" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:background="@drawable/circle"
        android:padding="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_avt" />

    <!-- Profile Information - Full Name -->
    <TextView
        android:id="@+id/tvFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="Full Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/etFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Full Name"
        android:visibility="gone"
        android:background="@drawable/edit_text_background"
        android:padding="10dp"
        android:layout_marginTop="8dp" />

    <!-- Profile Information - Phone Number -->
    <TextView
        android:id="@+id/tvPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Phone Number"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/etPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Phone Number"
        android:visibility="gone"
        android:background="@drawable/edit_text_background"
        android:padding="10dp"
        android:layout_marginTop="8dp" />

    <!-- Profile Information - Address -->
    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Address"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/etAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Address"
        android:visibility="gone"
        android:background="@drawable/edit_text_background"
        android:padding="10dp"
        android:layout_marginTop="8dp" />

    <!-- Profile Information - Birthday -->
    <TextView
        android:id="@+id/tvBirthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Birthday"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/etBirthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Birthday"
        android:visibility="gone"
        android:background="@drawable/edit_text_background"
        android:padding="10dp"
        android:layout_marginTop="8dp" />

    <!-- Update Profile Button -->
    <Button
        android:id="@+id/btnUpdateProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/blue"
        android:text="Update Profile"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <!-- List Refraction Record Button -->
    <Button
        android:id="@+id/btnListRefractionRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/blue"
        android:text="List Refraction Record"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <!-- List Visual Acuity Record Button -->
    <Button
        android:id="@+id/btnListVisualAcuityRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/blue"
        android:text="List Visual Acuity Record"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

</LinearLayout>
