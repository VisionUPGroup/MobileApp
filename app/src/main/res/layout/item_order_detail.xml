<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@android:color/white">

        <!-- Product Image and Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Product Image -->
            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_image" />

            <!-- Product Name and Price -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/txtProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Name"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price: đ0"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số lượng: 1"
                    android:textSize="14sp"
                    android:paddingBottom="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Left and Right Lens Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <!-- Left Lens -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="4dp">

                <ImageView
                    android:id="@+id/imgLeftLens"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_image" />

                <TextView
                    android:id="@+id/txtLeftLensName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Left Lens Name"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingTop="4dp" />

                <TextView
                    android:id="@+id/txtLeftLensPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Left Lens Price: đ0"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Right Lens -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="4dp">

                <ImageView
                    android:id="@+id/imgRightLens"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_image" />

                <TextView
                    android:id="@+id/txtRightLensName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Right Lens Name"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingTop="4dp" />

                <TextView
                    android:id="@+id/txtRightLensPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Right Lens Price: đ0"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- OS and OD Values in Two Columns -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <!-- OS Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OS"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/txtSphereOS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sphere: OS 1.0"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtCylinderOS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cylinder: OS -1.0"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtAxisOS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Axis: OS 90"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtAddOS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add: OS 1.0"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- OD Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OD"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/txtSphereOD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sphere: OD 1.0"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtCylinderOD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cylinder: OD -1.0"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtAxisOD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Axis: OD 90"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtAddOD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add: OD 1.0"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- PD Value -->
        <TextView
            android:id="@+id/txtPD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PD: 62"
            android:textSize="14sp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
