<!--activity_create_profile-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Tiêu đề chính -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tạo hồ sơ"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Họ và Tên -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Họ và Tên"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/editFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập họ và tên của bạn"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:padding="10dp"
        android:background="@drawable/edit_text_background"
        android:layout_marginBottom="12dp" />

    <!-- Số điện thoại -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số điện thoại"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/editPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập số điện thoại của bạn"
        android:inputType="phone"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:padding="10dp"
        android:background="@drawable/edit_text_background"
        android:layout_marginBottom="12dp" />

    <!-- Địa chỉ -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Địa chỉ"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/editAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập địa chỉ của bạn"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:padding="10dp"
        android:background="@drawable/edit_text_background"
        android:layout_marginBottom="12dp" />
    <ImageView
        android:id="@+id/imgSelected"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/default_avt"
        android:scaleType="centerCrop"
        android:layout_marginBottom="12dp" />

    <!-- Nút chọn ảnh -->
    <Button
        android:id="@+id/btnSelectImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn ảnh"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />
    <!-- Ngày sinh -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày sinh"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/editBirthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Chọn ngày sinh của bạn"
        android:focusable="false"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:padding="10dp"
        android:background="@drawable/edit_text_background"
        android:layout_marginBottom="20dp" />

    <!-- Nút Tạo hồ sơ và Hủy -->
    <Button
        android:id="@+id/btnCreateProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tạo hồ sơ"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hủy"
        android:textColor="@color/white"
        android:backgroundTint="@color/gray"
        android:textStyle="bold" />

</LinearLayout>
