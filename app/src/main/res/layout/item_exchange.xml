<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Staff Name -->
        <TextView
            android:id="@+id/staffName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhân viên: John Doe"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Order Code -->
        <TextView
            android:id="@+id/orderCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã đơn hàng: 123456"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <!-- Reason -->
        <TextView
            android:id="@+id/reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lý do: Kính bị lỗi"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <!-- Status and Button Layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <!-- Status -->
            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã duyệt"
                android:textSize="12sp"
                android:paddingVertical="4dp"
                android:paddingHorizontal="8dp"
                android:gravity="center"
                android:background="@drawable/status_border"
                android:textColor="@color/blue"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <!-- Detail Button -->
            <Button
                android:id="@+id/btnDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:text="Xem đơn hàng"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
