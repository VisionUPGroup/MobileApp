<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <!-- Camera Preview View -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="370dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:background="#E0E0E0"
        android:elevation="4dp" />

    <!-- Up Button -->
    <Button
        android:id="@+id/btnUp"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="Up"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:elevation="2dp"
        android:layout_below="@id/previewView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Test Image View -->
    <ImageView
        android:id="@+id/imageViewTest"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/btnUp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:padding="8dp"
        android:elevation="4dp" />

    <!-- Down Button -->
    <Button
        android:id="@+id/btnDown"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="Down"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:elevation="2dp"
        android:layout_below="@id/imageViewTest"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Left Button -->
    <Button
        android:id="@+id/btnLeft"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="Left"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:elevation="2dp"
        android:layout_toStartOf="@id/imageViewTest"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp" />

    <!-- Right Button -->
    <Button
        android:id="@+id/btnRight"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="Right"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:elevation="2dp"
        android:layout_toEndOf="@id/imageViewTest"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp" />

    <!-- TextView Information -->
    <LinearLayout
        android:id="@+id/infoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:layout_below="@id/btnDown">

        <TextView
            android:id="@+id/textViewLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level: 1"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginEnd="16dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textViewNumberOfTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tests: 0"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textViewDiopter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diopter: 0.0"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- Finish Button -->
    <Button
        android:id="@+id/btnFinish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/infoLayout"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Kết thúc"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF5722"
        android:elevation="2dp" />
</RelativeLayout>
